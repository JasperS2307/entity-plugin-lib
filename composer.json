{
    "name":              "hostnet/entity-plugin-lib",
    "type":              "composer-plugin",
    "description":       "Installer for all the Hostnet Doctrine entity libraries",
    "license":           "MIT",
    "require": {
        "php":                 ">=5.6",
        "composer-plugin-api": "^1.0.0",
        "symfony/filesystem":  "^2.3.0 | ^3.0.0",
        "twig/twig":           "1.*, >=1.13"
    },
    "require-dev": {
        "composer/composer":  "^1.1.0",
        "hostnet/phpcs-tool": "^4.0.8",
        "phpunit/phpunit":    "^5.4.3"
    },
    "minimum-stability": "stable",
    "autoload": {
        "psr-4": {
            "Hostnet\\Component\\EntityPlugin\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Hostnet\\Component\\EntityPlugin\\Mock\\":       "test/Mock",
            "Foo\\":                                          "test/Fixtures/Foo",
            "Hostnet\\Animal\\":                              "test/Fixtures/Hostnet/Animal",
            "Hostnet\\AnimalDrink\\":                         "test/Fixtures/Hostnet/AnimalDrink",
            "Hostnet\\Client\\":                              "test/Compound/Fixtures/Hostnet/Client",
            "Hostnet\\Contract\\":                            "test/Compound/Fixtures/Hostnet/Contract",
            "Hostnet\\Component\\EntityPlugin\\Functional\\": "test/Functional/Tests",
            "Hostnet\\Death\\":                               "test/Compound/Fixtures/Hostnet/Death",
            "Hostnet\\Drink\\":                               "test/Fixtures/Hostnet/Drink",
            "Hostnet\\EdgeCases\\Entity\\":                   "test/EdgeCases",
            "Hostnet\\FunctionalFixtures\\":                  "test/Functional/src",
            "Hostnet\\Product\\":                             "test/Compound/Fixtures/Hostnet/Product"
        }
    },
    "extra": {
        "class": "Hostnet\\Component\\EntityPlugin\\Plugin"
    }
}
