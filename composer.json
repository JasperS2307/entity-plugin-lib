{
    "name": "hostnet/entity-plugin-lib",
    "type": "composer-plugin",
    "description": "Installer for all the Hostnet Doctrine entity libraries",
    "license": "MIT",
    "require": {
        "php": ">=5.4",
        "twig/twig": "1.*, >=1.13",
        "composer-plugin-api": "^1.0"
    },
    "require-dev": {
        "composer/composer": "master@dev",
        "phpunit/phpunit": "4.*",
        "squizlabs/php_codesniffer": "1.*"
    },
    "minimum-stability": "stable",
    "autoload": {
        "psr-4": { "Hostnet\\Component\\EntityPlugin\\": "src/" }
    },
    "autoload-dev": {
        "psr-4": {
            "Hostnet\\Component\\EntityPlugin\\Mock\\": "test/Mock",
            "Hostnet\\EdgeCases\\Entity\\": "test/EdgeCases"
        }
    },
    "extra": {
        "class": "Hostnet\\Component\\EntityPlugin\\Plugin"
    }
}
