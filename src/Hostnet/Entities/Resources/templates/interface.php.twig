<?php
namespace {{ namespace }};

/**
 * Interface generated for {{ trait_name }} to use in typehinting.
 * This way you can change the implementation to be something different in a unit-test
 *
 * Typehint to the most specific interface allowed.
 * - If you write stuff in a lib that depends on the ClientContract component, typehint ClientContract
 * - If only depend on the Client component, typehint Client
 */
interface {{ name }}
{% if interfaces | length %}
  extends {{ interfaces | join(', ') }}
{% endif %}
{
{% for method in methods %}
    {%- if method.isPublic() and not method.isStatic() %}

    public function {{ method.name }}(
      {%- include 'parameters.php.twig' with { parameters: method.parameters } -%});
    {%- endif %}
    {%- endfor %}

}
